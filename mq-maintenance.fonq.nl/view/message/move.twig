<div class="section-hidden section-visible">

    <h2>Move all messages from {{ queue.getName() }}</h2>
    <div class="hider" style="display:block;">
        <form method="get" id="move_message_form" >
            <input type="hidden" id="fld_do" name="_do" value="">
            <input type="hidden" name="from_vhost" value="{{ from_vhost }}">
            <input type="hidden" name="from_queue" value="{{ from_queue }}">

            <table class="form">
                <tbody>
                    <tr>
                        <th><label>To host:</label></th>
                        <td>
                            <select name="to_vhost" class="autosubmit">
                                <option value="">Please choose</option>
                                {% for vhost in all_vhosts %}
                                    <option {{ to_vhost == vhost.getName() ? 'selected' }} value="{{ vhost.getName() }}">{{ vhost.getName() }}</option>
                                {% endfor %}
                            </select>
                        </td>
                    </tr>
                    <tr>
                        <th><label>To queue:</label></th>
                        <td>
                            <select name="to_queue" class="autosubmit">
                                {% if all_vhost_queues %}
                                    <option value="">Please choose a queue</option>
                                    {% for queue in all_vhost_queues %}
                                        <option{{ to_queue == queue.getName()|trim ? ' selected="selected"' }}>{{ queue.getName() }}</option>
                                    {% endfor %}
                                {% else %}
                                    <option value="">Select a vhost first</option>
                                {% endif %}
                            </select>
                        </td>
                    </tr>
                    <tr>
                        <th><label>Messages: </label></th>
                        <td>
                            {{ messages.count() }} messages will be moved
                        </td>
                    </tr>
                </tbody>
            </table>
            <input type="submit" id="move_messases_btn" value="Move messages">
        </form>
    </div>
</div>